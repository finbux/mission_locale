{% extends "::base.html.twig" %}
{% block title %}
    {{ parent() }} | Les offres
{% endblock %}
{% block body %}
<div id="wrapper-item">
    <div id="container_item">
        <div id="documentation" style="background: white;">
            <div id="header_doc" style="width: 1060px; margin-top: -39px;">
                <h1>
                    <img src="{{ asset('bundles/main/img/cv.png') }}" alt="">
                    {{ offre.nomOffre }}
                </h1>
            </div>
            <p>Offre affichée depuis le {{ offre.createdAt|date('d-m-Y') }}</p>
            <hr/>
            <h2>Description</h2>
            {{ offre.descriptionOffre|raw }}
            <hr/>
            <p class="appel-conseiller">Si cette offre vous intéresse, rapprochez-vous de votre conseiller </p>
        </div>
    </div>
</div>
    {% include "::footer.html.twig" %}
{% endblock %}