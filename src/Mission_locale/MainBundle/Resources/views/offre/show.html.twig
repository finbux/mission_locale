{% extends "::base.html.twig" %}
{% block title %}
    {{ parent() }} | Les offres
{% endblock %}
{% block body %}
<div id="wrapper-item">
    <div id="container_item">
        <div id="page_offre">
            <h1 class="titre_offre">{{ offre.nomOffre }}</h1> <p>Offre affichée depuis le {{ offre.createdAt|date('d-m-Y') }}</p>
