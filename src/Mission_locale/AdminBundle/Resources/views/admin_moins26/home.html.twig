{% extends "FOSUserBundle::layout_admin.html.twig" %}
{% block title_admin %}Gérer la catégorie : Moins de 26 ans {% endblock %}
{% block arianne %} {{ parent() }} -> <a href="{{ path('admin_moins26') }}"> Choisir une catégorie</a>{% endblock %}
{% block content %}

<table>
    <tr>
        <th>Items</th>
        <th>Action</th>
        <th></th>
    </tr>
    {% for categorie in categories %}
        <tr>
            <td class="data-item">{{ categorie.nameCategory }}</td>
            <td><a href="{{ path('admin_moins26_update', { 'id': categorie.id}) }}">Modifier</a></td>
            <td><a href="{{ path('admin_sous_item', { 'id': categorie.id}) }}">Gérer les sous items</a></td>
        </tr>
    {% endfor %}
</table>

{% endblock %}