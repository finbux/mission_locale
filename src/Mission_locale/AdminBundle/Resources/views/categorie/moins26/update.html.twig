{% extends "::base_admin.html.twig" %}
{% block body %}
    <div id="wrapper-admin">
        <div class="header" style="background: rgb(238,127,0)" >Gérer la catégorie :  moins de 26 ans</div>

        <div id="container-data">
            {% block content %}
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div class="flash-{{ type }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                <a href="{{  app.request.headers.get('referer') }}">
                    <button><img src="{{ asset('bundles/admin/images/arrow_back.png') }}" alt=""/>Page précédente</button>
                </a>
                <div class="update_data">
                    {{ form_start(form) }}
                    {{ form_row(form.nameCategory) }}
                </div>
                {{ form(form) }}
            {% endblock %}

        </div>
    </div>
    {% block fos_user_content %}
    {% endblock fos_user_content %}

{% endblock %}