{% extends "FOSUserBundle::layout_admin.html.twig" %}
{% block title_admin %}Gérer la catégorie : Plus de 26 ans {% endblock %}
{% block content %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="flash-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <a href="{{  app.request.headers.get('referer') }}">
        <button><img src="{{ asset('bundles/admin/images/arrow_back.png') }}" alt=""/>Page précédente</button>
    </a>
    <div class="update_data">
        {{ form_start(form) }}
        {{ form_row(form.nameCategory) }}
    </div>
    {{ form(form) }}

{% endblock %}