{% extends "::base_admin.html.twig" %}
{% block body %}
    <div id="wrapper-admin">
    <div class="header" style="background: rgb(87,156,161)" >Gérer la catégorie :  Plus de 26 ans</div>

    <div id="container-data">
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        {{ wo_render_breadcrumbs() }}
        <table>
            <tr>
                <th >Items</th>
                <th>Action</th>
                <th></th>
            </tr>
            {% for categorie in items %}
                <tr>
                    <td class="data-item">{{ categorie.nameCategory }}</td>
                    <td><a href="{{ path('admin_plus26_update', { 'id': categorie.id}) }}">Modifier</a></td>
                    <td><a href="{{ path('admin_sous_item', { 'id': categorie.id}) }}">Gérer les sous items</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}