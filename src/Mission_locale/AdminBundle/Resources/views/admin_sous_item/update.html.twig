{% extends "FOSUserBundle::layout_admin.html.twig" %}
{% block title_admin %}Modifier un sous item {% endblock %}
{% block content %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="flash-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <a href="{{  app.request.headers.get('referer') }}">
        <button><img src="{{ asset('bundles/admin/images/arrow_back.png') }}" alt=""/>Page précédente</button>
    </a>
    <a href="{{ path('sous_item_delete', { 'id': app.request.get('id')} ) }}" onclick="return confirm('Supprimer le sous item ?')">
        <button>Supprimer</button>
    <a>
    <div class="update_data">
        {{ form_start(form) }}
        {{ form_row(form.nomSousItem) }}
        {{ form_row(form.description, { 'id': 'ck_textarea'}) }}
    </div>
    {{ form(form) }}
    {{ form_end(form) }}
{% endblock %}