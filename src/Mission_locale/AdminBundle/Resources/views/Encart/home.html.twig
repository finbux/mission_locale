{% extends "FOSUserBundle::layout_admin.html.twig" %}
{% block title_admin %}Gérer les encarts {% endblock %}
{% block arianne %} {{ parent() }} -> <a href="{{ path('admin_modules') }}">choisir un module</a> {% endblock %}
{% block content %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="flash-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <a href="{{ path('admin_modules')}}">
        <button><img src="{{ asset('bundles/admin/images/arrow_back.png') }}" alt=""/>Page précédente</button>
    </a>
    <table>
        <tr>
            <th>Nom de l'encart</th>
            <th>Action</th>
        </tr>
        {% for encart in encarts %}
            <tr>
                <td>{{ encart.nomEncart }}</td>
                <td>
                    <a href="{{ path('admin_encart_update',{'id' : encart.id}) }}">Modifier</a>
            </tr>
        {% endfor %}

    </table>
{% endblock %}