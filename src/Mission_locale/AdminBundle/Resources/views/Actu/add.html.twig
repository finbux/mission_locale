{% extends "FOSUserBundle::layout_admin.html.twig" %}
{% block title_admin %}Ajouter une actualité {% endblock %}
{% block arianne %} {{ parent() }} -> <a href="{{ path('admin_modules') }}">choisir un module</a> {% endblock %}
{% block content %}
   {# {{ wo_render_breadcrumbs() }} #}
    <br/>
    <a href="{{ path('actu_index')}}">
        <button><img src="{{ asset('bundles/admin/images/arrow_back.png') }}" alt=""/>Page précédente</button>
    </a>
    <form action="{{ path('actu_add') }}" method="post" {{ form_enctype(form) }}>
    {{ form_row(form.titre) }}
        <hr/>
        {{ form_row(form.image) }}
        {{ form_errors(form.image) }}
        <hr/>
        {{ form_row(form.thumb) }}
        {{ form_errors(form.thumb) }}
        <hr/>
        {{ form_row(form.description) }}
        <hr/>
        {{ form_row(form.contenu, {'id' : 'ck_textarea'}) }}
        {{ form_label(form.isPublished) }}

        {{ form_widget(form.isPublished) }}

        <hr/>
        <div class="dateActu">
            {{ form_row(form.dateDebut) }}
        </div>
    {{ form_end(form) }}
{% endblock %}
{% block javascript %}
       {{ parent() }}
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
        <script type="text/javascript">
            $(function(){
                $("input:radio[name='mission_locale_adminbundle_actu[isPublished]']").click(function() {
                   if(($(this).val() == 2))
                   {
                       $(".dateActu").fadeIn();
                   }
                    else{
                       $(".dateActu").hide();
                   }
                });
            });
        </script>
{% endblock %}