<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Administration{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/main/css/style_admin.css') }}"
              type="text/css" media="all" />
        <link rel="stylesheet" href="{{ asset('bundles/main/css/outdatedbrowser.css') }}"/>

    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<div id="container_logo">
    <img src="{{ asset('bundles/main/img/logo.png') }}" alt="">

</div>
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    {% block body %}
        <div id="connexion">
            <div class="header">ESPACE ADMINISTRATION</div>
            {% if error %}
                <div class="flash-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                <label for="password">{{ 'security.login.password'|trans }}</label><br/>
                <input type="password" id="password" name="_password" required="required" />
                <br/>
                <input type="submit" class="btn-submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                <div class="cb"></div>
            </form>
        </div>
        {% endblock %}
{% endblock fos_user_content %}
</body>
</html>